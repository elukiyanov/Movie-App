<h2>List of All Movies</h2>


<div class="radioButtonHolder">
    @using (Html.BeginForm())
    {
        <div class="radioButtonTitle"><span class="reds">Sort By:</span></div>
        <div class="radioButtonLeft">
            <!--<input type="radio" name="sortRadioButton" value="1" checked> Title<br />-->
            <input type="radio" name="sortRadioButton" value="1"> Title<br />
            <input type="radio" name="sortRadioButton" value="2"> Year (old)<br />
            <input type="radio" name="sortRadioButton" value="3"> Year (new)<br />
        </div>
        <div class="radioButtonLeft">
            <input type="radio" name="sortRadioButton" value="4">Rating<br />
            <input type="radio" name="sortRadioButton" value="5">Genre<br />
            <input type="radio" name="sortRadioButton" value="6">Has Image<br />
        </div>
        <div class="radioButtonSpace"><input type="submit" value="Refresh" class="blueBTN"/></div>
    }
</div>



@foreach (var item in Model) 
{
    
    <div class="movieRow">
       <div class="movieImage">
           <img class="movieAvatar" src="@Html.DisplayFor(modelItem => item.ImageURL)" />
       </div>
       <div class="movieInfo"> 

           <div class="movieTitle">@Html.DisplayFor(modelItem => item.Title)</div>
           <div class="movieRating"><span class="reds">Rating: </span>@Html.DisplayFor(modelItem => item.Rating)</div>
           <div class="movieRelease"><span class="reds">Release Date: </span>@Html.DisplayFor(modelItem => item.ReleaseFormated)</div>
           <div class="movieGenre"><span class="reds">Genre: </span>@Html.DisplayFor(modelItem => item.Genre)</div>
           <div class="movieDirector"><span class="reds">Director: </span>@Html.DisplayFor(modelItem => item.Director)</div>
           <div class="movieCast"><span class="reds">Cast: </span>@Html.DisplayFor(modelItem => item.Actors)</div>
           <div class="movieSynopsis"><span class="reds">Synopsis: </span><span class="syn">@Html.DisplayFor(modelItem => item.Synopsis) </span></div>
           <div class="movieControls">
               @Html.ActionLink("Edit", "Edit", new { id=item.ID }, new { @class= "blueBTN"}) &nbsp &nbsp &nbsp
               @Html.ActionLink("Delete", "Delete", new { id=item.ID }, new { @class= "purpleBTN"})
           </div>

        </div>
    </div>

    <br>
}


